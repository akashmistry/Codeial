<h1>Codeial / <%= title %></h1>

<section id="feed-posts">
  <h4>Posts</h4>
  <%if(locals.user){%>
  <form action="/posts/create" method="post" id="new-post-form">
    <textarea
      name="content"
      id=""
      cols="30"
      rows="3"
      placeholder="Type Here..."
    ></textarea>
    <input type="submit" value="Post" />
  </form>
  <%}%>
  <div class="posts-list-container">
    <ul>
      <%for(post of posts){ %>
      <li><%= post.content%></li>

      <%}%>
    </ul>
  </div>
</section>
